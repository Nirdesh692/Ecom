@model Ecom.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h4 class="text-center">Order Details</h4>
    <hr />
    <dl class="row">
        <div class="col">
            <dl class="row offset-sm-2">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-3">
                    @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderDate)
                </dt>
                <dd class="col-sm-3">
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>
            </dl>
            <dl class="row offset-sm-2">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderStatus)
                </dt>
                <dd class="col-sm-3">
                    @Html.DisplayFor(model => model.OrderStatus)
                </dd>
            </dl>
           
            
        </div>

        <div class="row">
            <div class="col">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                Product Name
                            </th>
                            <th>
                                Product
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Rate
                            </th>
                            <th>
                                Total Price
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td class="col-sm-3">
                                    @Html.DisplayFor(model => item.Product.Name)
                                </td>
                                <td class="col-sm-3">
                                    <div class="d-flex align-items-center">
                                        <img src="@item.Product.ImageUrl" class="img-fluid" alt="Sofa" style="width: 120px; border-radius: 10px;">
                                    </div>
                                </td>
                                <td class="col-sm-2">
                                    @Html.DisplayFor(model => item.Quantity)
                                </td>

                                <td class="col-sm-2">
                                    @Html.DisplayFor(model => item.UnitPrice)
                                </td>
                                <td class="col-sm-2">
                                    @Html.DisplayFor(model => item.TotalPrice)
                                </td>
                            </tr>
                        }
                        <tr>
                            <td colspan="4" class="h6"> @Html.DisplayNameFor(Model => Model.TotalAmount)</td>
                            <td class="col-sm-10 h6">@Html.DisplayFor(Model => Model.TotalAmount)</td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
        

    </dl>
    <div>
        <a class="btn btn-primary" asp-action="Index">Back</a>
    </div>
</div>
