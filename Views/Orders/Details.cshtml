@model Ecom.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
        </dd>
        @foreach(var item in Model.OrderItems)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.UnitPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.UnitPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.Order)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.OrderId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.Product)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Product.Name)
            </dd>
        }
        

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
