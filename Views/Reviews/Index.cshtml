@model IEnumerable<Ecom.Models.Review>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p class="h3 text-center">Customer's Reviews</p>
<div class="container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Customer's Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReviewDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FirstName)
                        @Html.DisplayFor(modelItem => item.User.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewDate)
                    </td>
                    <td>
                        <div class="rating d-flex align-items-center">
                            @for (int i = 0; i < item.Rating; i++)
                            {
                                <i class="fas fa-star text-warning"></i>
                            }

                            @for (int i = 0; i < 5-item.Rating; i++)
                            {
                                <i class="far fa-star text-muted"></i>
                            }
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                        <div class="d-flex align-items-center">
                            <img src="@item.Product.ImageUrl" class="img-fluid" alt="Sofa" style="width: 120px; border-radius: 10px;">
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
